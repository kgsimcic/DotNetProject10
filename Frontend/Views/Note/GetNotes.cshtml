@model Frontend.ViewModels.DoctorNoteViewModel

@{
    ViewData["Title"] = "GetNotes";
}

<h4>@($"All Notes for {Model.PatientName}")</h4>

<p>
    @Html.ActionLink("New Note", "CreateForm", "Note", new { patientId = Model.PatientId, patientName = Model.PatientName }, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PatientId)
            </th>
            <th>
                Note
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Notes) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PatientId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Note)
            </td>
        </tr>
}
    </tbody>
</table>
<p>
    @Html.ActionLink("Generate Report", "GenerateReport", "Patient", new { patientId = Model.PatientId }, new { @class = "btn btn-primary" })
</p>
